{
    "name": "helldivers.bot",
    "version": "0.5.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "dev:bun": "bun --bun run dev",
        "build": "next build",
        "build:bun": "bun --bun run build",
        "start": "node .next/standalone/server.js",
        "start:bun": "bun --bun .next/standalone/server.js",
        "docker": "prisma migrate deploy && node server.js",
        "lint": "next lint",
        "format": "prettier --write .",
        "lint:watch": "chokidar 'src/**/*.{js,jsx,ts,tsx}' -c 'npm run lint'",
        "format:watch": "chokidar 'src/**/*.{js,jsx,ts,tsx}' -c 'npm run format'",
        "watch": "npm run lint:watch & npm run format:watch"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^2.9.1",
        "@prisma/client": "^6.8.2",
        "axios": "^1.9.0",
        "next": "15.3.2",
        "next-auth": "^5.0.0-beta.28",
        "nodemailer": "^6.10.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.56.4",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-dist": "^5.21.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "chokidar-cli": "^3.0.0",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "prisma": "^6.8.2",
        "tailwindcss": "^4"
    },
    "volta": {
        "node": "22.15.0",
        "npm": "11.4.0"
    }
}
